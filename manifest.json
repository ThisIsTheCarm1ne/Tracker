{
  "manifest_version": 2,
  "name": "Tracker",
  "version": "1.0",

  "description": "Tracs your time between websites",

  "icons": {
    "48": "icons/border-48.png"
  },

  "browser_action": {
    "default_popup": "view/index.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false,
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["css/style.css"]
    }
  ],

  "permissions": [
    "tabs",
    "storage"
  ]
}
